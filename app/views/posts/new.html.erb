<%= render "header" %>

<h1>Create a post</h1>

<%= form_with model: @post do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title, placeholder: "My awesome post!" %>
  <% @post.errors.full_messages_for(:title).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <br>
  <%= form.label :body%>
  <%= form.text_area :body, placeholder: "My post..." %>
  <% @post.errors.full_messages_for(:body).each do |message| %>
    <div><%= message %></div>
  <% end %>
  <br>
  <%= form.submit "Create post" %>
<% end %>
